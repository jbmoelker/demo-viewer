{
  "name": "demo-viewer",
  "version": "0.0.1",
  "private": true,
  "description": "Preview components in isolation with documentation, annotations and breakpoint controls.",
  "scripts": {
    "prebuild": "rimraf dist/ && mkdirp dist/",
    "build": "npm-run-all --parallel build:css build:js",
    "build:css": "node scripts/postcss.js",
    "build:js": "npm run build:tags && npm run build:concat",
    "build:tags": "riot --type none --ext tag.html src/modules/ dist/tags.js",
    "build:concat": "concat-cli --files node_modules/riot/riot.min.js dist/tags.js src/index.js --output dist/demo-viewer.js",
    "postbuild": "rimraf dist/tags.js",
    "start": "http-server './' -c-1 -o -p 3366",
    "test": "npm-run-all test:*",
    "test:eslint": "eslint src/**/*.js src/**/*.tag.html",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "chokidar 'src/**/*.css' --command 'npm run build:css'",
    "watch:js": "chokidar 'src/**/*.js' 'src/**/*.tag.html' --command 'npm run build:js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbmoelker/demo-viewer.git"
  },
  "author": "Jasper Moelker <jasper@voorhoede.nl> (https://voorhoede.nl/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jbmoelker/demo-viewer/issues"
  },
  "homepage": "https://github.com/jbmoelker/demo-viewer#readme",
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "chokidar-cli": "1.2.0",
    "concat-cli": "4.0.0",
    "cssnano": "3.5.2",
    "eslint": "2.4.0",
    "eslint-plugin-html": "1.4.0",
    "http-server": "0.8.5",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "npm-run-all": "1.5.1",
    "postcss": "5.0.21",
    "postcss-css-variables": "0.5.1",
    "postcss-import": "8.1.1",
    "rimraf": "2.5.2",
    "riot": "2.3.15"
  }
}
